<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.dawn.baselib.view.SquareImageView
        android:id="@+id/item_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/default_gray_shape" />

    <com.dawn.baselib.view.SquareImageView
        android:id="@+id/default_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/default_gray_shape"
        android:visibility="gone" />

    <com.dawn.baselib.view.SquareImageView
        android:id="@+id/blur_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66fEfEfE"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/select_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingLeft="20dp"
        android:paddingTop="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/select_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_photo_noamal"
            android:visibility="visible" />

        <TextView
            android:id="@+id/select_tv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/solid_red_corner_bg"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:visibility="gone" />
    </RelativeLayout>


</RelativeLayout>