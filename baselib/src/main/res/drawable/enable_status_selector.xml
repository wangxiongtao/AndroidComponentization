<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape>
            <corners android:radius="3dp" />
            <gradient android:angle="135" android:endColor="@color/end_gradient_color" android:startColor="@color/main_color" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="3dp" />
            <solid android:color="@color/trans_end_gradient_color"/>
        </shape>
    </item>
</selector>